{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["airbnb", "plugin:prettier/recommended", "prettier/react"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "flowtype"],
  "rules": {
    "prettier/prettier": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "global-require": "off",
    "import/no-unresolved": "off",
    "import/no-dynamic-require": "off"
  }
}
